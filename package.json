{
  "name": "fog-of-war-bot",
  "version": "1.0.0",
  "description": "TypeScript bot for Fog of War",
  "main": "dist/server.js",
  "bin": {
    "fog-bot": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "cli": "npm run build && node dist/cli.js",
    "dev": "ts-node src/server.ts",
    "dev-cli": "ts-node src/cli.ts",
    "local": "ts-node src/server.ts --server=http://localhost:3001"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "socket.io-client": "^4.7.0",
    "express": "^4.18.0",
    "@types/node": "^20.0.0",
    "@types/socket.io-client": "^1.4.36",
    "@types/express": "^4.17.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "ts-node": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
